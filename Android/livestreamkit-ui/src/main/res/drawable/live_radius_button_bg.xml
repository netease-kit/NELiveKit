<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="32dp"/>
            <gradient
                android:angle="0"
                android:endColor="#FF7272"
                android:startColor="#F359E2"
                android:type="linear" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="32dp"/>
            <gradient
                android:angle="0"
                android:endColor="#66FF7272"
                android:startColor="#66F359E2"
                android:type="linear" />
        </shape>
    </item>
</selector>